{
  "editor.formatOnSave": false,
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`|{|,)([^']*)(?:'|\"|`|,)"]
  ],
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/.git": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/.git": true
  }
}
